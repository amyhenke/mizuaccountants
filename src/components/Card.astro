---
export interface Props {
	title: string;
	body: string;
	icon: string;
	// href: string;
}
const { href, title, icon, body } = Astro.props;
---

<li class="link-card">
	<!-- <a href={href}> -->
		<i class={icon}></i>
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
	<!-- </a> -->
</li>
<style lang="scss">
	.link-card {
		list-style: none;
		padding: 0.15rem;
		background-image: var(--link-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 40px;
		border-radius: 3px;
		color: var(--white);
		background-color: var(--secondary);
		text-align: center;
		i {
			font-size: 1.5rem;
			margin-bottom: 10px;
		}
		h2 {
			text-transform: uppercase;
			font-weight: bold;
			letter-spacing: 2px;
		}
		p {
			margin-top: 0.75rem;
			margin-bottom: 0;
		}
	}
</style>
